@using mezunlar.Models;
@model EtkinliklerModel
@{
    ViewBag.Title = "EtkinlikDetail";
}

<div class="  col-md-8">
    <img src="/Blog/img/@Model.Image" class="card-img" alt="...">
    <div class="">
        <h3 class="card-title mt-3 ">@Model.Name<br><small class="lead">@Model.YayınTarihi - @Model.GecerlilikTarihi</small></h3>
        <p class="card-text p-0 m-1">@Model.Location</p>
    </div>
    <p>
        <h5 class="mt-3">Detaylar</h5>
    <p style="direction: ltr; text-align: left;">
         @Model.Description
    </p>

    <p class="lead text-center">@Model.YayınTarihi</p>
</div>

