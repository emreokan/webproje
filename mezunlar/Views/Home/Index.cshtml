@model mezunlar.Models.MainPageModel

@{
    ViewBag.Title = "Index";
}


<div class="row">
    <div class="col-md-8 ">
        <h6 class="mt-2 p-2 border bg-secondary rounded color-w shadow">Yeni ne var</h6>
        <h6 class="border-bottom p-2 bg-primary rounded color-w shadow mb-3">Albüm</h6>
        <div id="carouselExampleIndicators" class="carousel slide shadow" data-ride="carousel">

            <ol class="carousel-indicators ">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
            </ol>
            <div class="carousel-inner img-fluid" style="height: 404px;">
                <div class="carousel-item active">

                    <img src="~/Blog/img/gazi.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">

                    <img src="~/Blog/img/gaziüni.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Blog/img/ankara.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Blog/img/ankaraüni.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Blog/img/odtü.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Blog/img/odtüni.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Blog/img/hacettepe.png" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="~/Blog/img/hacettepeüni.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
        <div class="row mt-2">
            <div class="col-md-6">
                <h6 class="border-bottom p-2 bg-secondary rounded color-w shadow mb-3">Paylaşımlar</h6>
                @foreach (var paylasimlar in Model.Blogs)
                {
                   
                    
                    <div class="row border-bottom job mt-3 pb-1">

                        @foreach (var kisiler in Model.UsersModels)
                        {

                            if (paylasimlar.UsersId == kisiler.Id)
                            {
                                <div class="col-md-4">
                                    <img src="~/Blog/img/@kisiler.Image" class="card-img-top" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <h5 class="card-title p-0 m-1">@kisiler.Username @kisiler.UserLastName </h5>
                                    <p class="lead">
                                        @kisiler.Bolum
                                        <small class="lead">
                                           
                                            @kisiler.Job  <br> @kisiler.JobStatu
                                        </small>
                                    </p>
                                </div>
                            }

                        }

                        <div class="card-body p-0 ">
                            <div class="col-md-8">
                                <h5 class="card-title p-0 m-1">@paylasimlar.Baslik</h5>
                            </div>
                            <p class="card-text pl-3 m-1">@paylasimlar.Aciklama </p>
                            <p class="card-text pl-3 m-1">@paylasimlar.Icerik50</p>
                            <p class="card-text pl-3 m-1 small">@paylasimlar.EklenmeTarihi.Date</p>
                            <p class="card-text pl-3 m-1">
                                <button class="btn btn-primary btn-xs" href="#">Daha Fazla...</button>
                            </p>
                         
                        </div>

                    </div>
                }
               

            </div>
            

            <div class="col-md-6">
                <h6 class="border-bottom p-2 bg-secondary rounded color-w shadow mb-3">Etkinlikler</h6>
                <!--etkinlikler sayfasından veri alınacak -->
                @foreach (var etkinlikler in Model.Etkinliklers)
                {
                    
                    <div class="row border-bottom job mt-3 pb-1">

                        <div class="col-md-4">
                            <img src="~/Blog/img/@etkinlikler.Image" class="card-img-top" alt="...">
                        </div>
                        <div class="col-md-8">
                            <h5 class="card-title p-0 m-1">@etkinlikler.Name</h5>
                        </div>
                        <div class="card-body p-0 ">

                            <p class="card-text pl-3 m-1">@etkinlikler.Description50</p>
                            <p class="card-text pl-3 m-1">@etkinlikler.YayınTarihi - @etkinlikler.GecerlilikTarihi</p>
                            <a href="#" class="btn btn-primary ml-3">detay</a>
                        </div>

                    </div>
                }

                
            </div>

        </div>


    </div>
    <div class="col-md-4">
        <h6 class="mt-2 p-2 border bg-secondary rounded color-w shadow">Kişisel fırsatlar</h6>
        <div>
            <h6 class="mt-2 p-2 border bg-primary rounded color-w shadow">Tanıman Gereken üyeler</h6>

            <div class="row  pt-2">
                <!--a etiketlerine basınca kullanıcı profillerine gidicek -->
                
               @foreach (var Users in Model.UsersModels)
               {
                   <div class="col-6 p-0  px-3 my-0">

                       <a href="#" class="resim-anchor">
                           <img src="~/Blog/img/@Users.Image" class="rounded img-fluid max-width: 100% height: auto mb-2  shadow" alt="...">
                           <h6 class="text-white pl-1" style="position: relative; bottom: 30px;">@Users.Username @Users.UserLastName</h6>
                       </a>
                   </div>
               }
                

                




            </div>

        </div>



        <h6 class="mt-4 p-2 border bg-secondary rounded color-w shadow">İş fırsatları</h6>

        @foreach (var Job in Model.Jobs)
        {
            <div id="job" class="row border-bottom mt-3 pb-1">

                <div class="col-md-4">
                    <img src="~/Blog/img/@Job.Image" class="card-img-top" alt="...">
                </div>
                <div class="col-md-8">
                    <div class="card-body p-0 ">
                        <h5 class="card-title p-0 m-1">@Job.Name</h5>
                        <p class="card-text p-0 m-1">@Job.JobName</p>
                        <a href="Job.html" class="btn btn-primary p-1 px-3 ">detay</a>
                    </div>
                </div>
            </div>
        }
       










    </div>
</div>


