@model IEnumerable<mezunlar.entity.Etkinlikler>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<h6 class="mt-2 p-2 border bg-secondary rounded color-w shadow">Etkinlik Listesi</h6>
<hr />
<p>
    @Html.ActionLink("Yeni Kategori", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table table-bordered table-hover table-striped, table-sm">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.YayınTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GecerlilikTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsHome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsApproved)
        </th>
        <th style="width: 200px;"></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
               
                <img src="/Blog/img/@item.Image" width="70" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.YayınTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GecerlilikTarihi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>

            <td>
            
                @if (item.IsHome == true)
                {
                    <p class="badge badge-success">
                        Ana Sayafada
                    </p>
                }
                else
                {
                    <p class="badge badge-danger">
                       Ana Sayfada Değil
                    </p>
                }
            </td>
            <td>
                
                @if (item.IsApproved == true)
                {
                    <p class="badge badge-success">
                        Onaylı
                    </p>
                }
                else
                {
                    <p class="badge badge-danger">
                        Onay bekliyor!
                    </p>
                }
            </td>
            <td style="width: 200px;">
                <div style="width: 200px;" class="btn-group mr-2 btn-group-xs" role="group" aria-label="First group">
                    @Html.ActionLink("Düzenle", "Edit", new {id = item.Id}, new {@class = "btn btn-warning btn-xs"})
                    @Html.ActionLink("Detay", "Details", new {id = item.Id}, new {@class = "btn btn-primary btn-xs"})
                    @Html.ActionLink("Sil", "Delete", new {id = item.Id}, new {@class = "btn btn-danger btn-xs"})
                </div>
            </td>
        </tr>
    }

</table>
