@model IEnumerable<mezunlar.entity.Blog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<hr />
<h6 class="mt-2 p-2 border bg-secondary rounded color-w shadow">Blog Listesi</h6>
<hr />
<p>
    @Html.ActionLink("Yeni Blog Ekle", "Create", null, new { @class = "btn btn-primary " })
</p>
<hr />
<table class="table table-bordered table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Users.Username)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.EklenmeTarihi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Onay)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnaSayfa)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="/Blog/img/@item.Image" width="70" />

            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Baslik)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.KategoriAdi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Users.Username)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.EklenmeTarihi)
            </td>
            <td>
                @if (item.Onay == true)
                {
                    <p class="badge badge-success">
                        Onaylı
                    </p>
                }
                else
                {
                    <p class="badge badge-danger">
                        Onay bekliyor!
                    </p>
                }

            </td>
            <td>
                @if (item.AnaSayfa == true)
                {
                    <p class="badge badge-success">
                        Ana Sayfada
                    </p>
                }
                else
                {
                    <p class="badge badge-danger">
                        Ana Sayfada Değil
                    </p>
                }

            </td>
            <td>

                <div style="width: 200px;" class="btn-group mr-2 btn-group-xs" role="group" aria-label="First group">
                    @Html.ActionLink("Düzenle", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Detay", "Details", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </div>


            </td>
        </tr>
    }

</table>
